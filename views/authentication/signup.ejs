<!-- Sign Up Form -->

<h2>Sign Up</h2>
<p class="m-a">Create an Account</p>
<form  class="sign-form" action="/signup" method="post" enctype="multipart/form-data">
  <label for="">User Name</label>
  <br>
  <input placeholder="Pick a username" type="text" name="username" required>
  <br>
  <label for="">Email</label>
  <br>
  <input placeholder="you@example.com" type="text" name="email" required>
  <br>
  <label for="">Password</label>
  <br>
  <input placeholder="Create a password" type="password" name="password" required>
  <br>
  <label for="">Confirm Password</label>
  <br>
  <input placeholder="Confirm password" type="password" name="confirmPassword" required>
  <br>
<!--  -->

      <input type="file" name="myPhoto">
  
<!--  -->
<br>
  <button class="btn-create-account">
    Create My Account
  </button>
</form>
<% if (typeof message != "undefined") { %>
  <div class="error-message"><%= message %></div>
<% } %>
<b class="negritas">Already registered? </b>
<a href="/login">Log In</a>

