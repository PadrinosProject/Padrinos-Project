<div id="items-container">
  <h3>Event items needed</h3>
  <ul id="items-list">
  <%for(i = 0; i < item.length; i++) { %>
    <li>NEEDED:  <%=item[i].itemName%>  ::::   How many? <%=item[i].quantity%></li>
    <form action="/item/<%=item[i]._id%>" method="POST">
    <button>Become Padrino</button>
    </form>
        <% if(! item[i].padrino) {%>
          <p>Missing padrino!</p>
        <%} else {%>
          <p>Padrino:<%=item[i].padrino%></p>
        <%}%>
    <%}%>
  </ul>
</div>

